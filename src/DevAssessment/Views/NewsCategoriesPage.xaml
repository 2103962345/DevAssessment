<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="DevAssessment.Views.NewsCategoriesPage"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             Visual="Material">

  <StackLayout VerticalOptions="CenterAndExpand" Padding="20">

    <Button Text="Technology News"
            Command="{Binding NavigateCommandClicked}"
            CommandParameter="technology" />
    <Button Text="Sports News" 
            Command="{Binding NavigateCommandClicked}" 
            CommandParameter="sports"/>
    <Button Text="Health News" 
            Command="{Binding NavigateCommandClicked}" 
            CommandParameter="health" />
    <Button Text="Science News" 
            Command="{Binding NavigateCommandClicked}"
            CommandParameter="science" />

  </StackLayout>
</ContentPage>
